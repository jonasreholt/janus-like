
#include <assert.h>
#include <cstring>
 
using namespace std;
 
// Global variables defining starting state
int n = 4;
int tmp = 0;
 
 
int main()
{
    
    
    int i = 0;
    while(i != n)
    {
        if (((i) == (3)) && ((tmp) == (0)))
        {
            i -= 3;
            tmp += 1;
        }
        i += 1;
        assert(!(i == 0));
    }
}
